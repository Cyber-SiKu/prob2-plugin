<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>

       <extension
         point="org.eclipse.ui.menus">
         
          <menuContribution
            locationURI="popup:fr.systerel.explorer.navigator.view">
         <command
               commandId="de.prob.ui.rodin.startVisualization"
               icon="icons/bms.png"
               label="Start Visualization"
               style="push">
            <visibleWhen>
               <with
                     variable="selection">
                  <iterate
                        operator="or">
                     <instanceof
                           value="de.prob.ui.eventb.BMotionStudioRodinFile">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>           
         <separator
               name="de.prob.ui.separator2"
               visible="true">
         </separator>
         <command
               commandId="de.prob.ui.rodin.starteventbanimation"
               icon="icons/prob.png"
               label="Start Animation / Model Checking"
               style="push">
            <visibleWhen>
      <with
            variable="selection">
         <iterate
               operator="or">
            <instanceof
                  value="org.eventb.core.IEventBRoot">
            </instanceof>
         </iterate>
      </with>
            </visibleWhen>
         </command>
         <separator
               name="de.prob.ui.separator1"
               visible="true">
         </separator>
      </menuContribution>
         
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="prob"
               label="ProB"
               mnemonic="P">
            <menu
                  id="analyze"
                  label="Visualize">
               <separator
                     name="analyze">
               </separator>
            </menu>
            <menu
                  id="groovy"
                  label="Groovy">
               <separator
                     name="groovy">
               </separator>
            </menu>
            <menu
                  id="contact"
                  label="Contact"
                  mnemonic="C">
               <separator
                     name="bugs">
               </separator>
               <separator
                     name="contact">
               </separator>
            </menu>
            <menu
                  id="debug"
                  label="Debug">
               <separator
                     name="debug">
               </separator>
            </menu> </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="probtoolbar">
         </toolbar>
      </menuContribution>
   </extension>
    
     <extension
           point="org.eclipse.ui.handlers">

 <handler
            commandId="de.prob.ui.rodin.starteventbanimation">
         <class
               class="de.prob.ui.eventb.StartAnimationHandler">
         </class>
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     operator="or">
                  <or>
                     <instanceof
                           value="org.eventb.core.IEventBRoot">
                     </instanceof>
                     <and>
                        <instanceof
                              value="org.eclipse.core.resources.IResource">
                        </instanceof>
                        <or>
                           <test
                                 forcePluginActivation="true"
                                 property="org.eclipse.core.resources.extension"
                                 value="bum">
                           </test>
                           <test
                                 forcePluginActivation="true"
                                 property="org.eclipse.core.resources.extension"
                                 value="buc">
                           </test>
                        </or>
                     </and>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>

     </extension>
     <extension
           point="org.eclipse.ui.commands">
                       <command
            id="de.prob.ui.rodin.starteventbanimation"
            name="Event-B Animate / Model Check">
      </command>
      <command
            defaultHandler="de.prob.ui.eventb.StartVisualizationHandler"
            id="de.prob.ui.rodin.startVisualization"
            name="Start Visualization">
      </command>      
     </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="de.prob.ui.eventb.BMotionStudioContentProvider"
            id="de.prob.ui.eventb.navigatorContent"
            labelProvider="de.prob.ui.eventb.BMotionLabelProvider"
            name="BMotion Studio Navigator Content"
            priority="normal">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </triggerPoints>
         <possibleChildren>
            <instanceof
                  value="de.prob.ui.eventb.BMotionStudioRodinFile">
            </instanceof>
         </possibleChildren>
         <actionProvider
               class="de.prob.ui.eventb.BMotionStudioActionProvider"
               id="de.prob.ui.eventb.navigatorAction"
               priority="normal">
            <enablement>
               <instanceof value="de.prob.ui.eventb.BMotionStudioRodinFile">
               </instanceof>
            </enablement>
         </actionProvider>         
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="fr.systerel.explorer.navigator.view">
         <includes>
            <contentExtension
                  pattern="de.prob.ui.eventb.navigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   
   
   
</fragment>
